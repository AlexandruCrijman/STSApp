<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#200500" />
            <gradient android:angle="0" android:endColor="#612A1D" android:startColor="#621400" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#200500" />
            <solid android:color="#2F1711" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#200500" />
            <gradient android:angle="0" android:endColor="#540A07" android:startColor="#2F1711" />
        </shape>
    </item>
</selector>