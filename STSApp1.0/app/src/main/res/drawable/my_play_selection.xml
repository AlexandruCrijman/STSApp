<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3B3B3B" />
            <gradient android:angle="-90" android:endColor="#E0E0E0" android:startColor="#3B3B3B" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3B3B3B" />
            <solid android:color="#8B8B8B" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3B3B3B" />
            <gradient android:angle="-90" android:endColor="#8B8B8B" android:startColor="#E0E0E0" />
        </shape>
    </item>
</selector>