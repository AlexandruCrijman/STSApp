<resources>

    <!-- Base application theme. -->
    <style name="STSAppTheme" parent="STSAppThemeBase">
        <!-- Customize your theme here. -->


    </style>

    <style name="STSAppThemeBase" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorRedDark1</item>
        <item name="colorPrimaryDark">@color/negruSmen</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorPrimaryInverse">@color/gri2</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>


    </style>

    <style name="mainButtons">
        <item name="android:textStyle">bold</item>

        <item name="android:textColor">@color/albSpalacit</item>
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">sans</item>
    </style>


    <style name="TitleAbout">
        <item name="android:textSize">28sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="edit_text_sign_in">

        <item name="android:background">@color/albSpalacit</item>
        <item name="android:textColor">@color/griCacaniu</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="text_descrip_rosu_pe_negru">
        <item name="android:shadowColor">@color/albSpalacit</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHighlight">@color/albSpalacit</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="STSAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="STSAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="STSAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
